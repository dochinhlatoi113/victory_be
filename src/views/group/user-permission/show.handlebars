<style>
    .search-field {

        padding: 10px 15px;
        min-width: 55%;
        font-size: 1rem;
        line-height: 1.5em;
        color: #373D41;
        background-color: #FFF;
        background-clip: padding-box;
        border: 1px solid #C5C5C7;
        border-radius: 6px;
        -webkit-box-shadow: none;
        box-shadow: none;
        flex-grow: 1;
        border-right: none;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }

    .search-submit {
        /* this class is for submit button, if in your code its different, just substitute the class name '.search-submit' */
        background-color: #1a1a1a;
        color: #ffffff;
        font-weight: 700;
        text-decoration: none;
        white-space: normal;
        -webkit-transition: none;
        transition: none;
        cursor: pointer;
        outline: 0;
        padding: 14px 24px 13px;
        font-size: 1rem;
        line-height: 1.25rem;
        border-radius: 6px;
        border-width: 0;
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }

    .search-form .input-group {
        text-align: center;
    }

    .search-form {
        margin: 30px 0;
    }

    .box-search {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
</style>
<div class="container-fluid">
    <div class="box-search">
        <button type="button" class="btn btn-primary" id="btnCreate">
            <a href="/group/user-permission/create">Create</a>
        </button>
        <form class="search-form" method="get" action="/group/user-permission/">
            <div class="input-group">
                <div class="input-group2">
                    <label><input type="search" class="search-field" placeholder="search..." value=""
                            name="keyWord"></label>
                    <input type="submit" class="rstore-domain-search-button search-submit btn btn-primary"
                        value="Search">
                </div>
            </div>
        </form>
    </div>
    <!--modals confirm delete-->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bạn có muốn xóa không ?
                </div>
                <div class="modal-footer">
                    <button type="button" id="btn-delete" class="btn btn-primary">Xóa</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>
    <form name="submit-delete" method="POST">

    </form>
    <!--end modals comfirm delete-->
    {{#if message}}
    <div class="alert alert-success" role="alert">
        {{message}}
    </div>
    {{/if}}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">id</th>
                <th scope="col">phòng</th>
                <th scope="col">account</th>
                <th scope="col">quyền</th>
                <th scope="col">ngày tạo</th>
                <th scope="col">action</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                {{#each lists}}
                <th scope="row">{{inc @index}}</th>
                <td>{{this.id}}</td>
                <td>{{this.department.name}}</td>
                <td>{{this.Admin.email}}</td>
                <td>{{this.permission.name}}</td>
                 <td>{{formatDate this.createdAt "short"}}
                 
                 </td>
                <td style="display: flex;">
                    <a class="icon-edit" href="/group/user-permission/edit/{{this.id}}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-pencil" viewBox="0 0 16 16">
                            <path
                                d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                        </svg>
                    </a>
                    <button type="submit" class="btn-destroy" id="btn-delete" data-toggle="modal"
                        data-target="#deleteModal" data-id="{{this.id}}">
                        <i class="bi bi-trash2" data-id="{{this.id}}"></i>
                    </button>
                </td>
            </tr>
            {{/each}}
            </tr>
        </tbody>
    </table>
    <div class="container mt-4">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                {{#if hasPreviousPage}}
                <li class="page-item">
                    <a class="page-link" href="?page=1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="?page={{previousPage}}&keyWord={{keyWord}}">{{previousPage}}</a>
                </li>
                {{/if}}
                <li class="page-item active">
                    <a class="page-link" href="?page={{currentPage}}">{{currentPage}}</a>
                </li>
                {{#if hasNextPage}}
                <li class="page-item">
                    <a class="page-link"
                        href="?page={{nextPage}}{{#if keyWord}}&keyWord={{keyWord}} {{/if}}">{{nextPage}}</a>
                </li>
                {{!-- <li class="page-item">
                    <a class="page-link" href="?page={{lastPage}}">Last</a>
                </li> --}}
                {{/if}}
            </ul>
        </nav>
    </div>
</div>

<script>
    
    $(document).ready(function () {
        let id = "";
        let submitDelete = document.forms['submit-delete']

        $('#deleteModal').on('show.bs.modal', function (event) {
            let button = $(event.relatedTarget)
            id = button.data('id')
            $("#btn-delete").click(function () {
                console.log(submitDelete);
                submitDelete.action = "/group/user-permission/delete/" + id;
                submitDelete.submit()
            })
        })
    });
</script>