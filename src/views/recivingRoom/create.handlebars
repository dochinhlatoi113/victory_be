<div class="container-fluid">
  <form action="insert-film" enctype="multipart/form-data" method="post">
    <div class="">
      <h4 style="margin-top: 10px">Main Application</h4>
      <div class="form-group">
        <label for="title">Applicant</label>
        <div class="row">
          <div class="col-sm">
            <label for="title">Last name</label>
            <input type="text" class="form-control" id="title">
          </div>
          <div class="col-sm">
            <label for="title">First name</label>
            <input type="text" class="form-control" id="title">
          </div>
        </div>

      </div>
      <div class="form-group">

        <label for="price">Dob</label> : <input type="text" id="datepicker">
      </div>
      <div class="form-group">
        <label for="price">Program</label>
        <input type="text" class="form-control" id="price">
      </div>
      <div id="frames"></div>
    </div>
    <div class="">
      <h4 style="margin-top: 10px">Contact information</h4>
      <div class="form-group">
        <label for="title">Phone</label>
        <input type="text" class="form-control" id="title">
      </div>
      <div class="form-group">
        <label for="price">Email</label>
        <input type="text" class="form-control" id="price">
      </div>
      <div class="form-group">
        <label for="price">Chat</label>
        <div class="form-group">
          <select name="cars" id="cars">
            <option value="volvo">zalo</option>
          </select>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="note">Note</label>
      <textarea class="form-control" id="description" rows="3"></textarea>
    </div>
    <div class="form-group">
      <label for="price">Drive</label>
      <input type="text" class="form-control" id="drive">
    </div>

    <div class="form-group">
      <label for="price">Canada- study,visitor</label>
      <input type="text" class="form-control" id="contract">
    </div>
    <div class="form-group">
      <label for="price">Canada- Qiip</label>
      <input type="text" class="form-control" id="contract">
    </div>
    <div class="form-group">
      <label for="price">Canada- Qiep</label>
      <input type="text" class="form-control" id="contract">
    </div>
    <div class="form-group">
      <label for="price">Canada- Pei</label>
      <input type="text" class="form-control" id="contract">
    </div>
    <div class="form-group">
      <label for="price">Canada- Suv</label>
      <input type="text" class="form-control" id="contract">
    </div>
    <div class="form-group">
      <label for="price">Usa- Eb5</label>
      <input type="text" class="form-control" id="contract">
    </div>
    <div class="form-group">
      <label for="price">Proof of finish</label> <br>
      <input type="file" id="myFile2" name="filename" multiple>
    </div>
    <div id="frames2"></div>
    <div class="form-group">
      <label for="price">Attachments</label> <br>
      <input type="file" id="myFile3" name="filename" multiple>
    </div>
    <div id="frames3"></div>
    <div class="">
      <h4 style="margin-top: 10px">Family information</h4>
      <div class="form-group">
        <label for="title">Spouse</label>
        <input type="text" class="form-control" id="title">
      </div>
      <div class="form-group">
        <label for="price">Child</label>
        <input type="text" class="form-control" id="price">
      </div>
      <div class="form-group">
        <label for="price">Parents</label>
        <input type="text" class="form-control" id="price">
      </div>
    </div>
    {{#each ../user.permission}}
    {{#if (eq this "create")}}
    <button type="submit" class="btn btn-primary">Submit</button>
    {{/if}}
    {{/each}}

  </form>
</div>
<script>

  $(document).ready(function () {
    $("#datepicker").datepicker();

    $('#myFile2').change(function () {
      $("#frames2").html('');
      for (var i = 0; i < $(this)[0].files.length; i++) {
        $("#frames2").append('<img class="previewFile" src="' + window.URL.createObjectURL(this.files[i]) + '" width="300px" height="200px"/>');
      }
    });
    $('#myFile3').change(function () {
      $("#frames3").html('');
      for (var i = 0; i < $(this)[0].files.length; i++) {
        $("#frames3").append('<img class="previewFile" src="' + window.URL.createObjectURL(this.files[i]) + '" width="300px" height="200px"/>');
      }
    });
  });

</script>